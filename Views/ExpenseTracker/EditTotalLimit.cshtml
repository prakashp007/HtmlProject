@model Expense_Tracker.Models.TotalLimit

@{
    ViewBag.Title = "EditTotalLimit";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="container">
    <h2>Total limit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
       
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.tid)

            <div class="form-group">
                @Html.Label("Expenses Total limit", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.totalExpenselimit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.totalExpenselimit, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success"/>
                </div>
            </div>
        </div>
    }

</div>